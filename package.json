{
  "name": "cleverdeus-api",
  "version": "0.0.20",
  "description": "",
  "author": "",
  "private": true,
  "license": "MIT",
  "scripts": {
    "step:one": "curl -O https://dev.cleverdeus.com/config/development.json",
    "step:two": "core-types development.json .env",
    "pm2:prod": "pm2 start pm2.config.js --env development",
    "pm2:dev": "pm2 start pm2.config.js --env development",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "env-url https://dev.cleverdeus.com/config/development.json  nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:micro": "env-url https://dev.cleverdeus.com/config/development.json nest start --watch",
    "start:prod": "env-url https://dev.cleverdeus.com/config/production.json node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "prepare": "husky install"
  },
  "dependencies": {
    "@nestjs/common": "^8.0.0",
    "@nestjs/config": "^1.1.5",
    "@nestjs/core": "^8.0.0",
    "@nestjs/jwt": "^8.0.0",
    "@nestjs/microservices": "^8.2.3",
    "@nestjs/platform-express": "^8.0.0",
    "@nestjs/swagger": "^5.1.5",
    "@sentry/node": "^6.15.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "cli-color": "^2.0.1",
    "core-types": "https://github.com/cleverdeus/core-types.git",
    "cross-env": "^7.0.3",
    "env-url": "^0.0.3",
    "helmet": "^4.6.0",
    "husky": "^7.0.4",
    "json-to-env": "^0.0.10",
    "json-to-env-var": "^1.0.0",
    "nestjs-i18n": "^8.2.1",
    "rate-limiter-flexible": "^2.3.6",
    "reflect-metadata": "^0.1.13",
    "request-ip": "^2.1.3",
    "response-time": "^2.3.2",
    "rimraf": "^3.0.2",
    "rxjs": "^7.4.0",
    "swagger-ui-express": "^4.2.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.1.5",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "prettier": "^2.5.0",
    "supertest": "^6.1.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
